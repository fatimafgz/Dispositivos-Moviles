<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".MainActivity"
    android:background="@drawable/fondo1">

    <ImageView
        android:id="@+id/imagenFondo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/vinil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <View
        android:id="@+id/cuadrado"
        android:layout_width="320dp"
        android:layout_height="640dp"
        android:layout_marginTop="-30dp"
        android:background="@drawable/cuadrado"
        app:layout_constraintEnd_toEndOf="@id/imagenFondo"
        app:layout_constraintStart_toStartOf="@id/imagenFondo"
        app:layout_constraintTop_toTopOf="@id/imagenFondo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/music_name"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/cuadrado"
        app:layout_constraintEnd_toEndOf="@id/cuadrado"
        app:layout_constraintTop_toTopOf="@id/cuadrado"
        app:layout_constraintVertical_bias="0.47" />

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reproducir"
        android:backgroundTint="@color/material_on_primary_disabled"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/textView"
        app:layout_constraintBottom_toBottomOf="@id/btnPause"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/btnPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pausar"
        android:backgroundTint="@color/material_on_primary_disabled"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/btnPlay"
        app:layout_constraintBottom_toBottomOf="@id/btnStop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detener"
        android:backgroundTint="@color/material_on_primary_disabled"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/btnPause"
        app:layout_constraintBottom_toBottomOf="@id/cuadrado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>